<style lang="scss">
	@media (min-width: 800px) {
		.root {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			gap: 1ch;
			list-style-position: inside;
			padding: 0;
		}
	}
	li :global(svg) {
		height: 24px;
		fill: currentColor;
	}
	ul.bento {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 1ch;
		padding: 0;

		@media (min-width: 800px) {
			display: grid;
			grid-template-areas:
				"methodsave methodsave oxymoron"
				"monofile more oxymoron"
				"monofile retune retune";
			grid-template-columns: 0.5fr 1fr 0.5fr;
			grid-template-rows: 0.5fr 0fr 0.5fr;
			gap: 10px;
			padding: 0;
		}
		li {
			display: contents;
		}
		li > a {
			display: flex;
			flex-direction: column;
			background: Field;
			color: FieldText;
			border-radius: 8px;
			text-decoration: none;
			@media (prefers-color-scheme: light) {
				background: ButtonFace;
				color: ButtonText;
			}
			p {
				padding-inline: 1rem;
				padding-block: 0;
				padding-bottom: 1ch;
				flex-grow: 1;
				@media (min-width: 800px) {
					padding-bottom: 0;
				}
			}

			h3 {
				padding-inline: 1rem;
				padding-block: 0;
				margin: 0;
				margin-block-start: 1ch;
			}
			img {
				width: 100%;
			}
		}

		.featured {
			grid-area: more;
			max-width: 382px;
			width: 100%;
			margin: auto;
			border-radius: 1ch;
			padding: 1ch;
			box-sizing: border-box;
		}
	}
</style>
