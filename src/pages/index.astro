<style lang="scss">
	.root > li > span {
		display: flex;
		flex-wrap: wrap;
		> span {
			flex-grow: 1;
			color: GrayText;
		}
		> ul {
			list-style: none;
			> li {
				display: inline;
			}
		}
	}
	li :global(svg) {
		height: 24px;
		fill: currentColor;
	}
	ul.bento {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 1ch;
		padding: 0;

		@media (min-width: 800px) {
			display: grid;
			grid-template-areas:
				"methodsave methodsave oxymoron"
				"tangent more oxymoron"
				"tangent masstable masstable";
			grid-template-columns: 0.4fr 1fr 0.4fr;
			grid-template-rows: 0.3fr 1fr 0.3fr;
			gap: 10px;
			padding: 0;
		}
		li {
			display: contents;
		}
		a {
			display: flex;
			flex-direction: column;
			background: Field;
			color: FieldText;
			border-radius: 8px;
			text-decoration: none;
			@media (prefers-color-scheme: light) {
				background: ButtonFace;
				color: ButtonText;
			}
			p {
				padding-inline: 1rem;
				padding-block: 0;
				padding-bottom: 1ch;
				flex-grow: 1;
				@media (min-width: 800px) {
					padding-bottom: 0;
				}
			}

			h3 {
				padding-inline: 1rem;
				padding-block: 0;
				margin: 0;
				margin-block-start: 1ch;
			}
			img {
				width: 100%;
			}
		}

		video {
			max-width: 424.45px;
			width: 100%;
			margin: auto;
		}
	}
</style>
