<style>
	article svg {
		fill: currentColor;
		vertical-align: middle;
	}
	@media (min-width: 800px) {
		div {
			display: grid;
			grid-template-columns: 1fr 1fr 1fr;
			grid-gap: 1ch;
		}
		article {
			background: #111;
			border-radius: 1ch;
		}
	}
	article {
		position: relative;
		&[inert] {
			pointer-events: none;
			@media (min-width: 800px) {
				background: #090909;
			}
			a,
			p {
				opacity: 0.5;
			}
			&.discontinued::before {
				content: "Discontinued";
			}
			&.discontinued {
				background: #200;
			}
			&::before {
				color: CanvasText;
				content: "Coming soon";
				position: absolute;
				font-size: large;
				z-index: 1;
				font-weight: bold;
				font-family: "Inter Display", Inter, sans-serif;
				right: 0;
				top: 0;
				transform: rotate(5deg);
			}
		}
		a {
			padding: 1ch;
			font-family: "Super Inter Display", "Inter Display", Inter, sans-serif;
			display: block;
		}
		p {
			padding-inline: 1ch;
			padding-bottom: 1ch;
			padding-top: 0;
		}
		h1 {
			margin-block-start: 0;
			font-size: large;
		}
	}
</style>
